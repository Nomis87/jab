<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.poke.main"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15" />

<!--     Hier befinden sich alle Permissions -->
	<uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/NoActionBar" >
        
        
<!--         Hier befinden sich alle Activities -->
        <activity
            android:name=".BootstrapActivity"
            android:label="@string/title_activity_bootstrap" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:screenOrientation="portrait"
            android:name="org.poke.setup.SetupActivity"
            android:label="@string/title_activity_setup" >
        </activity>
        <activity
            android:screenOrientation="portrait"
            android:name="org.poke.index.IndexActivity"
            android:label="@string/title_activity_index" >
        </activity>
        <activity
            android:screenOrientation="portrait"
            android:name="org.poke.error.SetupErrorActivity"
            android:label="@string/title_activity_setup_error" >
        </activity>
        <activity
            android:screenOrientation="portrait"
            android:name="org.poke.newPoke.NewPokeActivity"
            android:label="@string/title_activity_new_poke" >
        </activity>
        <activity
            android:screenOrientation="portrait"
            android:name="org.poke.newPoke.NewTimedPokeActivity">
        </activity>
        <activity 
            android:name="org.poke.message.PokeMessageActivity"
            android:theme="@style/Theme.Transparent"
            android:configChanges="orientation">
        </activity>
        
<!--         Hier befinden sich alle Services  -->
        <service 
            android:name="org.poke.index.PokeStateService">
        </service>
        <service 
            android:name="org.poke.message.PokeMessageService">
        </service>
        <service 
            android:name=".MainService">        
        </service>
        <service 
            android:name="org.poke.xmpp.XMPPService">
        </service>
        
<!--         Hier befinden sich alle Receiver -->
		<receiver 
		    android:name="org.poke.contact.ContactReceiver"
		    android:enabled="true">         
		    <intent-filter>
		        <action android:name="org.poke.CONTACT_INTENT" />
		    </intent-filter>		    
		</receiver>
		<receiver 
		    android:name="org.poke.message.PokeMessageReceiver"
		    android:enabled="true">         
		    <intent-filter>
		        <action android:name="org.poke.POKEMESSAGE_INTENT" />
		    </intent-filter>		    
		</receiver>
        <receiver 
		    android:name="org.poke.message.SubscribeMessageReceiver"
		    android:enabled="true">         
		    <intent-filter>
		        <action android:name="org.poke.SUBSCRIBEMESSAGE_INTENT" />
		    </intent-filter>		    
		</receiver>
		<receiver 
		    android:name="org.poke.message.timedSend.TimedMessageReceiver"
		    android:enabled="true">		
		    <intent-filter>
		        <action android:name="org.poke.TIMED_MESSAGE_INTENT"/>
		    </intent-filter>
		</receiver>
		
    </application>

</manifest>