<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

	<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#181818">
        
	    <TextView 
	        android:id="@+id/main_headline"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="5dp"
	        android:layout_marginLeft="5dp"
	        android:textSize="30dp"
	        android:textColor="#FFFFFF"/>
	    
	    <LinearLayout 
	        android:layout_width="104dp"
	        android:layout_height="match_parent"
	        android:layout_alignParentRight="true">
	        
	        <LinearLayout 
	        	android:layout_width="2dp"
	        	android:layout_height="40dp"
	        	android:layout_marginTop="5dp"
	        	android:background="#5D5D5D" />
	        
	        <Button 
            	android:id="@+id/tabButtonHome"
           	 	android:layout_width="50dp"
            	android:layout_height="match_parent"
            	android:background="@drawable/actionbar_home_button"/>
	        
	        <LinearLayout 
	        	android:layout_width="2dp"
	        	android:layout_height="40dp"
	        	android:layout_marginTop="5dp"
	        	android:background="#5D5D5D" />
	        
	        <Button 
            	android:id="@+id/tabButtonNewMessage"
           	 	android:layout_width="50dp"
            	android:layout_height="match_parent"   	
            	android:background="@drawable/actionbar_new_message_button"/>
	        
	    </LinearLayout>
	    
    </RelativeLayout>
    
    
   <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="60dp"
        android:orientation="vertical"
        android:background="@drawable/main_background"
        android:id="@+id/main_layout">

    </RelativeLayout>
    
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">
        
        
         <LinearLayout
        	android:layout_width="match_parent"
        	android:layout_height="1dp"
        	android:background="#181818" >

    	</LinearLayout>


    	<LinearLayout
        	android:layout_width="fill_parent"
       	 	android:layout_height="wrap_content" 
       	 	android:baselineAligned="false">
			
    		<RelativeLayout
    	       	android:layout_width="0dp"
            	android:layout_height="60dp"
            	android:layout_weight=".25"
            	android:background="#CC0000" >
            	
    		    <LinearLayout 
    		        android:id="@+id/left_red_bar_button_layout"
    	        	android:layout_width="3dp"
            		android:layout_height="60dp"
            		android:layout_marginLeft="4dp"
            		android:layout_alignParentLeft="true"
            		android:background="@drawable/tabgroup_red_bar_repeat"  />
    	            
    	        
    	        <Button 
            		android:id="@+id/tabButtonContacts"
           	 		android:layout_width="match_parent"
            		android:layout_height="match_parent"
            		android:background="@android:color/transparent"/>
    	        
    	        <LinearLayout 
    	        	android:layout_width="30dp"
            		android:layout_height="30dp"
            		android:layout_centerHorizontal="true"
            		android:layout_centerVertical="true"
            		android:background="@drawable/tabgroup_contacts_button"  />	  
    	        
    	        <LinearLayout 
    	            android:id="@+id/right_red_bar_button_layout"
    	        	android:layout_width="3dp"
            		android:layout_height="60dp"
            		android:layout_marginRight="4dp"
            		android:layout_alignParentRight="true"
            		android:background="@drawable/tabgroup_red_bar_repeat"  />
    	        
    	    </RelativeLayout>
    	    
    		<RelativeLayout
    	       	android:layout_width="0dp"
            	android:layout_height="60dp"
            	android:layout_weight=".25"
            	android:background="#0099CC" >
    	        
    		    <LinearLayout
    		        android:id="@+id/left_blue_bar_button_layout"
    	        	android:layout_width="3dp"
            		android:layout_height="60dp"
            		android:layout_marginLeft="4dp"
            		android:layout_alignParentLeft="true"
            		android:background="@drawable/tabgroup_blue_bar_repeat"  />
    	        
    	        <Button 
            		android:id="@+id/tabButtonHistory"
           	 		android:layout_width="match_parent"
            		android:layout_height="match_parent"
            		android:background="@android:color/transparent"/>
    	        
    	        <LinearLayout 
    	        	android:layout_width="30dp"
            		android:layout_height="30dp"
            		android:layout_centerHorizontal="true"
            		android:layout_centerVertical="true"
            		android:background="@drawable/tabgroup_history_button"  />	        
    	        
    	        <LinearLayout
    	            android:id="@+id/right_blue_bar_button_layout" 
    	        	android:layout_width="3dp"
            		android:layout_height="60dp"
            		android:layout_marginRight="4dp"
            		android:layout_alignParentRight="true"
            		android:background="@drawable/tabgroup_blue_bar_repeat"  />
    	        
    	    </RelativeLayout>
    	    
    		<RelativeLayout
    	       	android:layout_width="0dp"
            	android:layout_height="60dp"
            	android:layout_weight=".25"
            	android:background="#669900" >
    	        
    		    <LinearLayout
    		        android:id="@+id/left_green_bar_button_layout" 
    	        	android:layout_width="3dp"
            		android:layout_height="60dp"
            		android:layout_marginLeft="4dp"
            		android:layout_alignParentLeft="true"
            		android:background="@drawable/tabgroup_green_bar_repeat"  />
    	        
    	        <Button 
            		android:id="@+id/tabButtonSounds"
           	 		android:layout_width="match_parent"
            		android:layout_height="match_parent"
            		android:background="@android:color/transparent"/>
    	        
    	        <LinearLayout 
    	        	android:layout_width="30dp"
            		android:layout_height="30dp"
            		android:layout_centerHorizontal="true"
            		android:layout_centerVertical="true"
            		android:background="@drawable/tabgroup_sound_button"  />
    	        
    	        <LinearLayout
    	            android:id="@+id/right_green_bar_button_layout"  
    	        	android:layout_width="3dp"
            		android:layout_height="60dp"
            		android:layout_marginRight="4dp"
            		android:layout_alignParentRight="true"
            		android:background="@drawable/tabgroup_green_bar_repeat"  />	        
    	        
    	    </RelativeLayout>
    	    
    		<RelativeLayout
    	       	android:layout_width="0dp"
            	android:layout_height="60dp"
            	android:layout_weight=".25"
            	android:background="#FF8800" >
    	        
    		    <LinearLayout
    		        android:id="@+id/left_yellow_bar_button_layout"  
    	        	android:layout_width="3dp"
            		android:layout_height="60dp"
            		android:layout_marginLeft="4dp"
            		android:layout_alignParentLeft="true"
            		android:background="@drawable/tabgroup_yellow_bar_repeat"  />
    	        
    	        <Button 
            		android:id="@+id/tabButtonTimedMessages"
           	 		android:layout_width="match_parent"
            		android:layout_height="match_parent"
            		android:background="@android:color/transparent"/>
    	        
    	        <LinearLayout 
    	        	android:layout_width="30dp"
            		android:layout_height="30dp"
            		android:layout_centerHorizontal="true"
            		android:layout_centerVertical="true"
            		android:background="@drawable/tabgroup_time_overview_button"  />	
    	        
    	        <LinearLayout
    	            android:id="@+id/right_yellow_bar_button_layout"   
    	        	android:layout_width="3dp"
            		android:layout_height="60dp"
            		android:layout_marginRight="4dp"
            		android:layout_alignParentRight="true"
            		android:background="@drawable/tabgroup_yellow_bar_repeat"  />	
    	          	        
    	    </RelativeLayout>
    	    
        
    	</LinearLayout>

    </LinearLayout>
    


</RelativeLayout>