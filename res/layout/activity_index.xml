<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background" >
	
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#1491CB">   
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginTop="2dp"
        android:background="#FFFFFF"
        android:orientation="vertical"> 
        
        <LinearLayout 
            android:layout_width="wrap_content"
    		android:layout_height="match_parent"
    		android:layout_gravity="center">
    		
            <TextView 
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:textColor="#1491CB"
            android:textSize="30dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="6dp"
            android:textStyle="bold"
            android:text="@string/app_name"/>
            
            <TextView 
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:textColor="#1491CB"
            android:textSize="16dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="6dp"
            android:textStyle="bold"
            android:text="the new way of Messaging"/>

        </LinearLayout> 	
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="52dp"
        android:background="#1491CB">   
    </LinearLayout>
    
    <LinearLayout 
            android:layout_width="fill_parent"
    		android:layout_height="match_parent"
    		android:orientation="vertical"
    		android:layout_marginTop="54dp">
        
    	<LinearLayout
        	android:layout_width="200dp"
        	android:layout_height="wrap_content"
        	android:background="#1491CB"
        	android:paddingLeft="1dp"
        	android:paddingRight="1dp"
        	android:orientation="vertical"
        	android:layout_gravity="center">

    		<TextView
    		    android:id="@+id/textView1"
    		    android:layout_width="wrap_content"
    		    android:layout_height="wrap_content"
    		    android:layout_marginLeft="10dp"
    		    android:layout_marginTop="20dp"
    		    android:text="Volume:"
    		    android:textAppearance="?android:attr/textAppearanceMedium" />

    		<SeekBar
    		    android:id="@+id/volumeFader"
    		    android:layout_width="match_parent"
    		    android:layout_height="wrap_content"
    		    android:layout_marginLeft="0dp"
    		    android:layout_marginRight="0dp"
    		    android:layout_marginTop="4dp"
    		    android:background="#FFFFFF" />
        
        	<Button
        	    android:id="@+id/buttonMyPokes"
        	    style="?android:attr/buttonStyleSmall"
        	    android:layout_width="180dp"
        	    android:layout_height="50dp"
        	    android:layout_marginLeft="10dp"
        	    android:layout_marginTop="20dp"
        	    android:background="#161616"
        	    android:textColor="#FFFFFF"
        	    android:text="My Pokes" />
        		
        	<Button
        		android:id="@+id/buttonNewPoke"
        		style="?android:attr/buttonStyleSmall"
        		android:layout_width="180dp"
        		android:layout_height="50dp"
        		android:layout_marginLeft="10dp"
        		android:layout_marginTop="10dp"
        		android:background="#161616"
        		android:textColor="#FFFFFF"
        		android:text="New Poke" />
        
        	<Button
        		android:id="@+id/buttonContactList"
        		style="?android:attr/buttonStyleSmall"
        		android:layout_width="180dp"
        		android:layout_height="50dp"
        		android:layout_marginLeft="10dp"
        		android:layout_marginTop="10dp"
        		android:layout_marginBottom="10dp"
        		android:background="#161616"
        		android:textColor="#FFFFFF"
        		android:text="New Timed Poke" />
        
        
        
    	</LinearLayout>
	</LinearLayout>
</RelativeLayout>
