<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    

	<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="50dp"
        android:background="@drawable/main_background"
        android:id="@+id/main_layout">
        
    	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    		android:id="@+id/activity_index"
    		android:layout_width="match_parent"
    		android:layout_height="match_parent"
    		android:orientation="vertical" >
    
    		<LinearLayout 
        		android:layout_width="213dp"
        		android:layout_height="137dp"
        		android:layout_marginTop="80dp"
        		android:layout_gravity="center_horizontal"
        		android:background="@drawable/jab"/>
     
    
    		<TextView 
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:layout_marginTop="5dp"
       			android:textColor="#181818"
       			android:layout_gravity="center_horizontal"
       			android:textSize="20dp"
       			android:text="smart Way of Messaging"/>
    
    		<SeekBar
        		android:id="@+id/frequency_slider"
        		android:layout_width="200dp"
        		android:layout_height="50dp"
        		android:layout_gravity="center_horizontal"
        		android:progress="0"
        		android:secondaryProgress="0"
        		android:progressDrawable="@drawable/seekbar_progress"
        		android:thumb="@drawable/seekbar_thumb"/>
    

		</LinearLayout>
	    	
       <RelativeLayout
        	android:layout_width="120dp"
        	android:layout_height="50dp"
        	android:fadingEdgeLength="10dp"
        	android:layout_centerHorizontal="true"
        	android:layout_alignParentBottom="true"
        	android:layout_marginBottom="-4dp"
        	android:background="@drawable/new_message_button_bg">
				
           <Button
             	android:id="@+id/tabButtonNewMessage"
            	android:layout_width="match_parent"
             	android:layout_height="match_parent"
             	android:background="@android:color/transparent"/>
			
			<TextView 
               	android:layout_height="wrap_content"
               	android:layout_width="wrap_content"
               	android:textColor="#FFFFFF"
               	android:textSize="20dp"
               	android:layout_centerVertical="true"
               	android:layout_centerHorizontal="true"
               	android:text="new Jab"/>

    	</RelativeLayout>

    </RelativeLayout>
    
   
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">
        
        
         <LinearLayout
        	android:layout_width="match_parent"
        	android:layout_height="2dp"
        	android:background="#000000" >

    	</LinearLayout>

    	<LinearLayout
    	    android:id="@+id/tabgroup_wrapper"
        	android:layout_width="fill_parent"
       	 	android:layout_height="wrap_content" 
       	 	android:baselineAligned="false">
			
    		<RelativeLayout
    	       	android:layout_width="0dp"
            	android:layout_height="50dp"
            	android:layout_weight=".25"
            	android:background="#CC0000" >
            	
    		    <LinearLayout 
    		        android:id="@+id/left_red_bar_button_layout"
    	        	android:layout_width="3dp"
            		android:layout_height="50dp"
            		android:layout_marginBottom="2dp"
    	        	android:layout_marginTop="2dp"
            		android:layout_marginLeft="4dp"
            		android:layout_alignParentLeft="true"
            		android:background="@drawable/tabgroup_red_bar_repeat"  />
    	            
    	        
    	        <Button 
            		android:id="@+id/tabButtonContacts"
           	 		android:layout_width="match_parent"
            		android:layout_height="match_parent"
            		android:background="@android:color/transparent"/>
    	        
    	        <LinearLayout 
    	        	android:layout_width="20dp"
            		android:layout_height="20dp"
            		android:layout_marginTop="6dp"
            		android:layout_centerHorizontal="true"
            		android:background="@drawable/tabgroup_contacts_button"  />	
            	
    	        <TextView 
    	            android:layout_width="wrap_content"
    	            android:layout_height="wrap_content"
    	            android:textColor="#000000"
    	            android:layout_centerHorizontal="true"
    	            android:layout_alignParentBottom="true"
    	            android:layout_marginBottom="2dp"
    	            android:textSize="10dp"
    	            android:textStyle="bold"
    	            android:text="Contacts"/>	  
    	        
    	        <LinearLayout 
    	            android:id="@+id/right_red_bar_button_layout"
    	        	android:layout_width="3dp"
            		android:layout_height="50dp"
            		android:layout_marginBottom="2dp"
    	        	android:layout_marginTop="2dp"
            		android:layout_marginRight="4dp"
            		android:layout_alignParentRight="true"
            		android:background="@drawable/tabgroup_red_bar_repeat"  />
    	        
    	    </RelativeLayout>
    	    
    		<RelativeLayout
    	       	android:layout_width="0dp"
            	android:layout_height="50dp"
            	android:layout_weight=".25"
            	android:background="#0099CC" >
    	        
    		    <LinearLayout
    		        android:id="@+id/left_blue_bar_button_layout"
    	        	android:layout_width="3dp"
            		android:layout_height="50dp"
            		android:layout_marginBottom="2dp"
    	        	android:layout_marginTop="2dp"
            		android:layout_marginLeft="4dp"
            		android:layout_alignParentLeft="true"
            		android:background="@drawable/tabgroup_blue_bar_repeat"  />
    	        
    	        <Button 
            		android:id="@+id/tabButtonHistory"
           	 		android:layout_width="match_parent"
            		android:layout_height="match_parent"
            		android:background="@android:color/transparent"/>
    	        
    	        <LinearLayout 
    	        	android:layout_width="20dp"
            		android:layout_height="20dp"
            		android:layout_centerHorizontal="true"
            		android:layout_marginTop="6dp"
            		android:background="@drawable/tabgroup_history_button"  />	   
            		
    	        <TextView 
    	            android:layout_width="wrap_content"
    	            android:layout_height="wrap_content"
    	            android:textColor="#000000"
    	            android:layout_centerHorizontal="true"
    	            android:layout_alignParentBottom="true"
    	            android:layout_marginBottom="2dp"
    	            android:textSize="10dp"
    	            android:textStyle="bold"
    	            android:text="JabÂ´s"/>
    	        
    	        <LinearLayout
    	            android:id="@+id/right_blue_bar_button_layout" 
    	        	android:layout_width="3dp"
            		android:layout_height="50dp"
            		android:layout_marginBottom="2dp"
    	        	android:layout_marginTop="2dp"
            		android:layout_marginRight="4dp"
            		android:layout_alignParentRight="true"
            		android:background="@drawable/tabgroup_blue_bar_repeat"  />
    	        
    	    </RelativeLayout>
    	    
    		<RelativeLayout
    	       	android:layout_width="0dp"
            	android:layout_height="50dp"
            	android:layout_weight=".25"
            	android:background="#669900" >
    	        
    		    <LinearLayout
    		        android:id="@+id/left_green_bar_button_layout" 
    	        	android:layout_width="3dp"
            		android:layout_height="50dp"
            		android:layout_marginBottom="2dp"
    	        	android:layout_marginTop="2dp"
            		android:layout_marginLeft="4dp"
            		android:layout_alignParentLeft="true"
            		android:background="@drawable/tabgroup_green_bar_repeat"  />
    	        
    	        <Button 
            		android:id="@+id/tabButtonSounds"
           	 		android:layout_width="match_parent"
            		android:layout_height="match_parent"
            		android:background="@android:color/transparent"/>
    	        
    	        <LinearLayout 
    	        	android:layout_width="20dp"
            		android:layout_height="20dp"
            		android:layout_centerHorizontal="true"
            		android:layout_marginTop="6dp"
            		android:background="@drawable/tabgroup_sound_button"  />
    	        
    	        <TextView 
    	            android:layout_width="wrap_content"
    	            android:layout_height="wrap_content"
    	            android:textColor="#000000"
    	            android:layout_centerHorizontal="true"
    	            android:layout_alignParentBottom="true"
    	            android:layout_marginBottom="2dp"
    	            android:textSize="10dp"
    	            android:textStyle="bold"
    	            android:text="Sounds"/>
    	        
    	        <LinearLayout
    	            android:id="@+id/right_green_bar_button_layout"  
    	        	android:layout_width="3dp"
            		android:layout_height="50dp"
            		android:layout_marginBottom="2dp"
    	        	android:layout_marginTop="2dp"
            		android:layout_marginRight="4dp"
            		android:layout_alignParentRight="true"
            		android:background="@drawable/tabgroup_green_bar_repeat"  />	        
    	        
    	    </RelativeLayout>
    	    
    		<RelativeLayout
    	       	android:layout_width="0dp"
            	android:layout_height="50dp"
            	android:layout_weight=".25"
            	android:background="#FF8800" >
    	        
    		    <LinearLayout
    		        android:id="@+id/left_yellow_bar_button_layout"  
    	        	android:layout_width="3dp"
    	        	android:layout_marginBottom="2dp"
    	        	android:layout_marginTop="2dp"
            		android:layout_height="50dp"
            		android:layout_marginLeft="4dp"
            		android:layout_alignParentLeft="true"
            		android:background="@drawable/tabgroup_yellow_bar_repeat"  />
    	        
    	        <Button 
            		android:id="@+id/tabButtonTimedMessages"
           	 		android:layout_width="match_parent"
            		android:layout_height="match_parent"
            		android:background="@android:color/transparent"/>
    	        
    	        <LinearLayout 
    	        	android:layout_width="20dp"
            		android:layout_height="20dp"
            		android:layout_centerHorizontal="true"
            		android:layout_marginTop="6dp"
            		android:background="@drawable/tabgroup_time_overview_button"  />	
            		
    	   		<TextView 
    	            android:layout_width="wrap_content"
    	            android:layout_height="wrap_content"
    	            android:textColor="#000000"
    	            android:layout_centerHorizontal="true"
    	            android:layout_alignParentBottom="true"
    	            android:layout_marginBottom="2dp"
    	            android:textSize="10dp"
    	            android:textStyle="bold"
    	            android:text="Time JabÂ´s"/>
    	   	
    	        
    	        <LinearLayout
    	            android:id="@+id/right_yellow_bar_button_layout"   
    	        	android:layout_width="3dp"
            		android:layout_height="50dp"
            		android:layout_marginBottom="2dp"
    	        	android:layout_marginTop="2dp"
            		android:layout_marginRight="4dp"
            		android:layout_alignParentRight="true"
            		android:background="@drawable/tabgroup_yellow_bar_repeat"  />	
    	          	        
    	    </RelativeLayout>
    	    
        
    	</LinearLayout>

    </LinearLayout>
</RelativeLayout>

