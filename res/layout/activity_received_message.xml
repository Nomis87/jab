<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#aa000000"
    android:layout_height="match_parent" >
    
    
    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:background="@drawable/received_message_bg"
        android:layout_centerInParent="true">
        
        <TextView 
            android:id="@+id/activity_received_message_from_view"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:textColor="#cc0000"/>
        
        <Button
            android:id="@+id/activity_received_message_play_button" 
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/received_message_play_button"
            android:layout_centerInParent="true"/>
        
        <TextView 
            android:id="@+id/activity_received_message_message_view"
            android:layout_height="wrap_content"
            android:layout_width="150dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="170dp"
            android:textSize="12dp"
            android:textColor="#cc0000"/>
        
        
    </RelativeLayout>
    

</RelativeLayout>