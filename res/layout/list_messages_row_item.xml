<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    
    <RelativeLayout 
        android:id="@+id/message_row_item_selector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginBottom="10dp"
        android:background="#181818">
        
        <TextView 
            android:id="@+id/message_row_item_selector_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="#FFFFFF"
            android:visibility="gone"
            android:textSize="18dp"
            android:textStyle="bold"/>
        
    </RelativeLayout>
    
    <LinearLayout
        android:id="@+id/message_row_item_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="15dp"
        android:orientation="vertical"
        android:background="@drawable/jabs_out_message_bg_two">
        
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp">
            
            <TextView 
                android:id="@+id/message_row_item_rs_contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#181818"
                android:textStyle="bold"/>
            
            <TextView 
                android:id="@+id/message_row_item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="#181818"
                android:textStyle="bold"/>
            
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="18dp"
                android:background="#000000"/>
            
        </RelativeLayout>
        
        <TextView 
			android:id="@+id/message_row_item_message"
            android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
			android:layout_marginTop="5dp"
			android:textColor="#000000"/>
        
        <LinearLayout 
            android:layout_width="match_parent"
			android:layout_height="1dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
			android:layout_marginTop="5dp"
			android:background="#000000"/>
        
        
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            
            <TextView 
				android:id="@+id/message_row_item_idView"
       	 		android:layout_height="wrap_content"
        		android:layout_width="wrap_content"
        		android:visibility="gone"/>
            
        	<Button 
            	android:id="@+id/message_row_item_playButton"
            	android:layout_gravity="center_horizontal"
            	android:layout_width="0dp"
            	android:layout_marginLeft="2dp"
            	android:layout_marginRight="4dp"
            	android:layout_height="30dp"
            	android:textColor="#FFFFFF"
            	android:layout_weight="0.5"
            	android:background="@drawable/button_jab_history"
            	android:text="PLAY SOUND"/>
        	
        	<Button 
            	android:id="@+id/message_row_item_deleteButton"
            	android:layout_gravity="center_horizontal"
            	android:layout_width="0dp"
            	android:layout_marginLeft="4dp"
            	android:layout_marginRight="2dp"
            	android:layout_height="30dp"
            	android:textColor="#FFFFFF"
            	android:layout_weight="0.5"
            	android:background="@drawable/button_jab_history"
            	android:text="DELETE"/>
      
        </LinearLayout>
        
    </LinearLayout>
  

</LinearLayout>